---
import { PUBLIC_GA_TRACKING_ID, ENABLE_LIGHTBOX } from '../server-constants.ts'
import { getDatabase, getPostBySlug } from '../lib/notion/client.ts'
import { getNavLink, getStaticFilePath, filePath } from '../lib/blog-helpers.ts'
import '../styles/syntax-coloring.css'
import '../styles/layout.css'
import GoogleAnalytics from '../components/GoogleAnalytics.astro'
import SearchModal from '../components/SearchModal.astro'
import SearchButton from '../components/SearchButton.astro'
import ProfileSidebar from '../components/ProfileSidebar.astro'
// eslint-disable-next-line @typescript-eslint/no-unused-vars
import type * as interfaces from '../lib/interfaces.ts'

export interface Props {
  title: string
  description: string
  path: string
  ogImage: string
  metaDescription?: string
}

const { title = '', description = '', path = '/', ogImage = '', metaDescription } = Astro.props

const database = await getDatabase()
const profilePost = await getPostBySlug('profile')

const siteTitle = title ? `${title} - ${database.Title}` : database.Title
const effectiveDescription = metaDescription || description || database.Description
const siteURL = new URL(getNavLink(path), Astro.site).toString()
const siteOGImage = new URL(
  getStaticFilePath('/default-og-image.png'),
  Astro.site
)

// og:type の決定
const ogType = Astro.url.pathname.startsWith(getNavLink('/posts')) ? 'article' : 'website';

const hasAsideContent = Astro.slots.has('aside')
const showSupplementary = !!profilePost || hasAsideContent

let coverImageURL: string | undefined
if (database.Cover) {
  if (database.Cover.Type === 'external') {
    coverImageURL = database.Cover.Url
  } else if (database.Cover.Type === 'file') {
    try {
      coverImageURL = filePath(new URL(database.Cover.Url))
    } catch {
      console.log('Invalid DB cover image URL: ', database.Cover?.Url)
    }
  }
}

let customIconURL: string | undefined
if (database.Icon && database.Icon.Type === 'file' && database.Icon.Url) {
  try {
    customIconURL = filePath(new URL(database.Icon.Url))
  } catch {
    console.log('Invalid DB custom icon URL: ', database.Icon.Url)
  }
}

// プロフィールページのFeaturedImageをアイコンとして使用
let profileIconURL = getStaticFilePath('/default-og-image.png')
if (profilePost?.FeaturedImage?.Url) {
  try {
    const url = new URL(profilePost.FeaturedImage.Url)
    profileIconURL = filePath(url)
  } catch {
    console.log('Invalid profile image URL: ', profilePost.FeaturedImage.Url)
  }
}
---

<!DOCTYPE html>
<html lang="en" prefix="og: https://ogp.me/ns#">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="max-image-preview:large" />
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteTitle}</title>
    <meta name="description" content={effectiveDescription} />
    <link rel="canonical" href={siteURL} />
    <link rel="sitemap" href="/sitemap.xml" />
    <meta property="og:url" content={siteURL} />
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={effectiveDescription} />
    <meta property="og:site_name" content={database.Title} />
    <meta property="og:image" content={ogImage || siteOGImage} />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={effectiveDescription} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content={ogImage || siteOGImage} />
    <meta name="google-adsense-account" content="ca-pub-7004556551724349">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.4/dist/katex.min.css"
      integrity="sha384-vKruj+a13U8yHIkAyGgK1J3ArTLzrFGBbBc0tDp4ad/EyewESeXE/Iv67Aj8gKZ0"
      crossorigin="anonymous"
    />
    <!--Google Font-->
    <link href="https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c" rel="stylesheet">
    <slot name="head-append" />
  </head>
  <body>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6921846261223866"
    crossorigin="anonymous"></script>
    <GoogleAnalytics trackingId={PUBLIC_GA_TRACKING_ID} />
    <div class="page-shell">
      {
        coverImageURL && (
          <div class="cover">
            <img src={coverImageURL} alt={`${database.Title} のカバー画像`} loading="lazy" />
          </div>
        )
      }

      <header class="site-header">
        <a class="brand" href={getNavLink('/')}>
          {
            database.Icon && database.Icon.Type === 'emoji' && database.Icon.Emoji ? (
              <>
                <span>{database.Icon.Emoji}</span>
                {database.Title}
              </>
            ) : database.Icon && database.Icon.Type === 'external' && database.Icon.Url ? (
              <>
                <img src={database.Icon.Url} alt="Site icon image" />
                {database.Title}
              </>
            ) : database.Icon && database.Icon.Type === 'file' && customIconURL ? (
              <>
                <img
                  src={customIconURL}
                  class="custom-icon"
                  alt="Site icon image"
                />
                {database.Title}
              </>
            ) : (
              database.Title
            )
          }
        </a>
        <p class="site-tagline">{database.Description}</p>
      </header>

      <section class="hero">
        <div class="hero-grid">
          <div class="hero-copy">
            <p class="hero-kicker">Notion powered journal</p>
            <h1 class="hero-title">{database.Title}</h1>
            <p class="hero-lead">{effectiveDescription}</p>
            <div class="hero-actions">
              <SearchButton />
              <a class="cta-button" href={getNavLink('/posts')}>
                記事一覧を見る
              </a>
            </div>
            <div class="hero-tags" aria-label="主要カテゴリーとタグ">
              <a class="tag-chip" href={getNavLink('/posts')}>
                最新記事
              </a>
              <a class="tag-chip" href={getNavLink('/note')}>
                ノート
              </a>
              {showSupplementary && (
                <a class="tag-chip" href="#categories">
                  カテゴリーを探す
                </a>
              )}
            </div>
          </div>
          <div class="hero-panel">
            <div class="hero-panel-card">
              <p class="panel-label">おすすめの読み方</p>
              <ul>
                <li>キーワード検索で気になる記事をすぐに発見。</li>
                <li>カテゴリーからまとめて読み込む。</li>
                <li>ノートで実験中のアイデアをチェック。</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <main class="page-content">
        <slot name="main" />

        {showSupplementary && (
          <section id="categories" class="supplementary">
            {profilePost && (
              <div class="supplementary-panel">
                <ProfileSidebar profileIconURL={profileIconURL} />
              </div>
            )}
            {hasAsideContent && (
              <div class="supplementary-panel">
                <slot name="aside" />
              </div>
            )}
          </section>
        )}

        <footer>
          <div>
            <span>Powered by&nbsp;</span>
            <a href="https://github.com/otoyo/astro-notion-blog"
              >astro-notion-blog</a
            >
          </div>
        </footer>
      </main>
    </div>

    <SearchModal />
    {
      ENABLE_LIGHTBOX && (
        <script src={getStaticFilePath('/scripts/fslightbox.js')} />
      )
    }
  </body>
</html>

<style is:global>
  :root {
    --gap-quarter: 0.25rem;
    --gap-half: 0.5rem;
    --gap: 1rem;
    --gap-double: 2rem;

    --bg: linear-gradient(180deg, #f8fbff 0%, #fff9f1 55%, #ffffff 100%);
    --fg: #242424; /* 基本文字色 */
    --accents-1: #f59e0b; /* リンク色 */
    --accents-2: #111111;
    --accents-3: #6b7280;
    --geist-foreground: #0f172a;
    --geist-success: #669900;

    --radius: 4px;

    --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto',
      'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans',
      'Helvetica Neue', sans-serif;
    --font-mono: SFMono-Regular, Menlo, Consolas, 'PT Mono', 'Liberation Mono',
      Courier, monospace;
  }

  * {
    box-sizing: border-box;
    word-break: break-word;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  html,
  body {
    padding: 0;
    margin: 0;
    font-size: 15px;
  }

  body {
    min-height: 100vh;
    background: var(--bg);
    color: var(--fg);
    font-family: 'M PLUS Rounded 1c', ui-sans-serif, -apple-system, BlinkMacSystemFont, 'Segoe UI',
      Helvetica, 'Hiragino Sans', 'Hiragino Kaku Gothic ProN',
      'Hiragino Sans GB', メイリオ, Meiryo, 'Apple Color Emoji', Arial,
      sans-serif, 'Segoe UI Emoji', 'Segoe UI Symbol';
    background-attachment: fixed;
    background-size: cover;

    overflow-x: hidden;

    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: 100%;
  }

  figure {
    margin: 0;
    font-size: 0.85rem;
    color: #999;
    line-height: 1.8rem;
  }

  a {
    color: var(--accents-1);
    text-decoration: none;
  }
  a:hover {
    color: var(--accents-1);
  }

  mark {
    padding: var(--gap-quarter);
    border-radius: var(--radius);
    background: rgba(247, 212, 255, 0.8);
  }

  h1 {
    margin: 0;
    color: var(--fg);
    font-size: 2rem;
    font-weight: 700;
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 1.6rem;
    }
  }

  ol {
    color: #222;
    font-weight: 400;
    font-size: 0.9rem;
    line-height: 1.8rem;
  }
  p,
  ul {
    color: #222;
    font-weight: 400;
    font-size: 1rem;
    line-height: 1.8rem;
  }
  ul,
  ol {
    margin: 0;
    padding-inline-start: 1.5rem;
  }
  pre {
    margin: 0;
    white-space: pre-wrap;
    tab-size: 2;
    overflow-x: auto;
    max-width: 100%;
  }
  pre :global(code) {
    overflow: auto;
    -webkit-overflow-scrolling: touch;
    white-space: pre-wrap;
    max-width: 100%;
  }

  hr {
    display: block;
    height: 1px;
    border: 0;
    margin: 0.3rem 0;
    background-color: #333;
  }

  code {
    font-size: 0.9rem;
    background: rgba(135, 131, 120, 0.15);
    color: #eb5757;
    padding: 0.25rem;
    border-radius: var(--radius);
    font-family: var(--font-mono);
  }

  table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
    border-collapse: collapse;
  }

  table tr {
    vertical-align: top;
  }

  table th {
    font-weight: 600;
    background-color: #f4f4f4;
  }

  table td,
  table th {
    font-size: 0.9rem;
    border: 1px solid #e4e4e4;
    padding: 0.5rem 1rem;
    text-align: left;
    line-height: 1.2rem;
  }
  table td::after {
    content: '';
    display: inline-block;
    min-height: 0.9rem;
  }
</style>
