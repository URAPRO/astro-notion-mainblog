---
import { Block } from '../lib/interfaces.ts'
import NotionBlocks from './NotionBlocks.astro'

export interface Props {
  blocks: Block[]
  slug?: string
}

const { blocks, slug } = Astro.props
---

<div class="post-body">
  <NotionBlocks blocks={blocks} isRoot={true} slug={slug} />
</div>

<style>
  .post-body {
    padding: 0.5rem 0;
  }
</style>
