  <div class="link-to-page-card">
    <a href={getPostLink(post)}>
      <div class="card-content">
        <div class="card-title">
          {isEmoji(post.Icon) && <span class="card-icon">{post.Icon.Emoji}</span>}
          {post.Title}
        </div>
        <div class="card-description">{post.Excerpt || ''}</div>
        <div class="card-meta">
          <span class="card-site">{blogTitle}</span>
        </div>
      </div>
      <div class="card-image">
        {featuredImageUrl && (
          <img
            src={featuredImageUrl}
            alt={post.Title}
            loading="lazy"
          />
        )}
      </div>
    </a>
  </div>
) : (
