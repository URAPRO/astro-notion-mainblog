---
import type { Post, Emoji, FileObject } from '../../lib/interfaces.ts'
import * as interfaces from '../../lib/interfaces.ts'
import { getPostByPageId, getDatabase } from '../../lib/notion/client'
import { getPostLink, filePath } from '../../lib/blog-helpers.ts'

export interface Props {
  block: interfaces.Block
}

const { block } = Astro.props

let post: Post | null = null
if (block.LinkToPage?.PageId) {
  post = await getPostByPageId(block.LinkToPage.PageId)
}

const database = await getDatabase()
const blogTitle = database.Title

// Type guard functions
function isEmoji(icon: FileObject | Emoji | null): icon is Emoji {
  return icon !== null && icon.Type === 'emoji';
}

// Get featured image URL
function getFeaturedImageUrl(post: Post): string | null {
  if (post.FeaturedImage?.Url) {
    try {
      return filePath(new URL(post.FeaturedImage.Url))
    } catch {
      return null
    }
  }
  return null
}

// Pre-compute featured image URL to avoid repeated function calls
const featuredImageUrl = post ? getFeaturedImageUrl(post) : null
