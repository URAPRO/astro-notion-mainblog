---
import { getDatabase } from '../lib/notion/client.ts'
import { getNavLink, filePath } from '../lib/blog-helpers.ts'
import SearchButton from './SearchButton.astro'

const database = await getDatabase()

let customIconURL: string | undefined
if (database.Icon && database.Icon.Type === 'file' && database.Icon.Url) {
  try {
    customIconURL = filePath(new URL(database.Icon.Url))
  } catch {
    console.log('Invalid DB custom icon URL: ', database.Icon.Url)
  }
}

// 現在のパスを取得
const currentPath = Astro.url.pathname
---

<header class="site-header">
  <div class="header-container">
    <a href={getNavLink('/')} class="logo">
      {
        database.Icon &&
        database.Icon.Type === 'emoji' &&
        database.Icon.Emoji ? (
          <span class="logo-icon">{database.Icon.Emoji}</span>
        ) : database.Icon &&
          database.Icon.Type === 'external' &&
          database.Icon.Url ? (
          <img src={database.Icon.Url} alt="Site icon" class="logo-icon" />
        ) : database.Icon && database.Icon.Type === 'file' && customIconURL ? (
          <img src={customIconURL} class="logo-icon" alt="Site icon" />
        ) : null
      }
      <span class="logo-text">{database.Title}</span>
    </a>

    <nav class="main-nav">
      <a
        href={getNavLink('/')}
        class={`nav-link ${currentPath === '/' ? 'active' : ''}`}
      >
        Top
      </a>
      <a
        href={getNavLink('/posts')}
        class={`nav-link ${currentPath.startsWith('/posts') ? 'active' : ''}`}
      >
        Posts
      </a>
    </nav>

    <div class="header-actions">
      <SearchButton />
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(253, 251, 247, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid #e8e2d9;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: #2d2a26;
    font-weight: 700;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .logo:hover {
    color: #e07a3d;
  }

  .logo-icon {
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 4px;
    object-fit: contain;
  }

  .logo-icon:is(span) {
    font-size: 1.25rem;
    width: auto;
    height: auto;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-grow: 1;
    justify-content: center;
  }

  .nav-link {
    padding: 0.5rem 1rem;
    border-radius: 8px;
    color: #5c5650;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    background: #f5f0e8;
    color: #e07a3d;
  }

  .nav-link.active {
    background: linear-gradient(
      135deg,
      var(--accents-1, #e07a3d) 0%,
      #d4693a 100%
    );
    color: #fff;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .header-actions :global(.search-button) {
    padding: 0.5rem;
    margin: 0;
    background: transparent;
    border-radius: 8px;
  }

  .header-actions :global(.search-button:hover) {
    background: #f5f0e8;
  }

  .header-actions :global(.search-button span) {
    display: none;
  }

  /* モバイル対応 */
  @media (max-width: 640px) {
    .header-container {
      padding: 0.6rem 1rem;
    }

    .nav-link {
      padding: 0.4rem 0.75rem;
      font-size: 0.85rem;
    }
  }
</style>
