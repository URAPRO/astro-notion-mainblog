---
import { getDatabase, getPosts, getRankedPosts, getAllTags, getPostBySlug } from '../lib/notion/client.ts'
import { getNavLink, getPostLink, getTagLink, filePath } from '../lib/blog-helpers.ts'

const database = await getDatabase()
const recentPosts = await getPosts(5)
const rankedPosts = await getRankedPosts()
const tags = await getAllTags()
const profilePost = await getPostBySlug('profile')

// プロフィール画像
let profileIconURL = ''
if (profilePost?.FeaturedImage?.Url) {
  try {
    const url = new URL(profilePost.FeaturedImage.Url)
    profileIconURL = filePath(url)
  } catch {
    console.log('Invalid profile image URL')
  }
}
---

