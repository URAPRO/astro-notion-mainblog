---
import type { Post } from '../lib/interfaces.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div class="post-excerpt">
  <p>{post.Excerpt ? post.Excerpt : ''}</p>
</div>

<style>
  .post-excerpt {
    font-size: 0.9rem;
    line-height: 1.5;
    color: #4b5563;
  }

  .post-excerpt p {
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
