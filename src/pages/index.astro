---
import { getAllBlogPosts, getRankedPosts, getAllTags } from '../lib/notion/client.ts'
import { getPostLink, getTagLink } from '../lib/blog-helpers.ts'
import Layout from '../layouts/Layout.astro'
import NoContents from '../components/NoContents.astro'
import PostDate from '../components/PostDate.astro'
import PostUpdateDate from '../components/PostUpdateDate.astro'
import PostTags from '../components/PostTags.astro'
import PostTitle from '../components/PostTitle.astro'
import PostFeaturedImage from '../components/PostFeaturedImage.astro'
import styles from '../styles/blog.module.css'

const [allPosts, rankedPosts, tags] = await Promise.all([
  getAllBlogPosts(),
  getRankedPosts(),
  getAllTags(),
])

const internalPosts = allPosts.filter((post) => !post.ExternalLink).slice(0, 6)
const notePosts = allPosts
  .filter((post) => post.ExternalLink && post.ExternalLink.includes('note.com'))
  .slice(0, 6)

const activeFilter = Astro.url.searchParams.get('type') === 'note' ? 'note' : 'article'
const filteredPosts = activeFilter === 'note' ? notePosts : internalPosts

const filterLinks = {
  article: `${Astro.url.pathname}?type=article`,
  note: `${Astro.url.pathname}?type=note`,
}
---

<Layout 
  title="Home" 
  path="/"
  description="urapro.dev – プログラマーUraによるWeb開発技術、プログラミングTIPS、読書記録を発信するブログ。実践的な情報であなたのスキルアップを応援します。"
  ogImage=""
>
  <div slot="main" class={`${styles.main} ${styles.postsPage}`}>
    <section class={styles.sectionHeader}>
      <div class={styles.headingBlock}>
        <h2>最新記事</h2>
        <p class={styles.leadCopy}>
          Web開発の実践ノウハウから日々の学びまで、アップデートされた記事をまとめています。
        </p>
      </div>
      <div class={styles.filterPills}>
        <a
          href={filterLinks.article}
          class={`${styles.filterPill} ${activeFilter === 'article' ? styles.activePill : ''}`}
        >
          通常記事
        </a>
        <a
          href={filterLinks.note}
          class={`${styles.filterPill} ${activeFilter === 'note' ? styles.activePill : ''}`}
        >
          note
        </a>
      </div>
    </section>

    <section class={styles.cardsSection}>
      {
        filteredPosts.length === 0 ? (
          <NoContents contents={filteredPosts} />
        ) : (
          <div class={styles.cardGrid}>
            {filteredPosts.map((post) => {
              const isNote = post.ExternalLink && post.ExternalLink.includes('note.com')
              return (
                <article class={styles.card} data-post-slug={post.Slug}>
                  <a
                    href={getPostLink(post)}
                    class={styles.cardLink}
                    target={isNote ? '_blank' : undefined}
                    rel={isNote ? 'noreferrer' : undefined}
                  >
                    <div class={styles.cardImage}>
                      <PostFeaturedImage post={post} enableLink={false} />
                    </div>
                    <div class={styles.cardBody}>
                      <div class={styles.cardMeta}>
                        <PostDate post={post} />
                        <PostUpdateDate post={post} />
                      </div>
                      <h3 class={styles.cardTitle}>
                        <PostTitle post={post} enableLink={false} />
                      </h3>
                      <p class={styles.cardExcerpt}>{post.Excerpt || ''}</p>
                      <div class={styles.cardTags}>
                        <PostTags post={post} enableLink={false} />
                      </div>
                    </div>
                  </a>
                </article>
              )
            })}
          </div>
        )
      }
      <div class={styles.seeMoreWrapper}>
        <a
          href={activeFilter === 'note' ? '/note' : '/posts'}
          class={styles.seeMoreButton}
        >
          もっと見る
        </a>
      </div>
    </section>

    <section class={styles.secondaryLinks}>
      <div class={styles.railBlock}>
        <div class={styles.railHeader}>
          <span>おすすめ</span>
        </div>
        <div class={styles.railScroller}>
          {rankedPosts.map((post) => (
            <a href={getPostLink(post)} class={styles.railItem}>
              <span class={styles.railItemTitle}>{post.Title}</span>
              <span class={styles.railItemMeta}>
                <PostDate post={post} />
              </span>
            </a>
          ))}
        </div>
      </div>

      <div class={styles.railBlock}>
        <div class={styles.railHeader}>
          <span>カテゴリー</span>
        </div>
        <div class={`${styles.railScroller} ${styles.tagRail}`}>
          {tags.map((tag) => (
            <a href={getTagLink(tag.name)} class={styles.tagPill}>
              {tag.name}
            </a>
          ))}
        </div>
      </div>
    </section>
  </div>

  <div slot="aside" class={styles.aside}></div>
</Layout>
