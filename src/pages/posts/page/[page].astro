    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-icon {
    margin-right: 0.2em;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: auto;
  }

  .post-tag {
    padding: 0.15rem 0.5rem;
    background: var(--hover-bg);
    border-radius: 4px;
    font-size: 0.7rem;
    color: var(--accents-3);
  }

  .post-date {
    font-size: 0.75rem;
    color: var(--accents-2);
  }

  .page-footer {
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 1px dashed var(--border-color);
  }

  /* „É¢„Éê„Ç§„É´ÂØæÂøú */
  @media (max-width: 640px) {
    .posts-page {
      padding: 0 1rem;
    }

    .section-heading {
      font-size: 1.3rem;
    }

    /* „É¢„Éê„Ç§„É´„Åß„ÅØÊ®™Èï∑„É™„Çπ„ÉàÂΩ¢Âºè */
    .posts-grid {
      display: flex;
      flex-direction: column;
      gap: 0;
      background: var(--card-bg);
      border-radius: 12px;
      border: 1px solid var(--border-color);
      overflow: hidden;
    }

    .post-card {
      flex-direction: row;
      align-items: center;
      gap: 0.6rem;
      padding: 0.6rem 0.75rem;
      border-radius: 0;
      border: none;
      border-bottom: 1px solid var(--border-color);
    }

    .post-card:last-child {
      border-bottom: none;
    }

    .post-card:hover {
      transform: none;
      box-shadow: none;
      background: var(--hover-bg);
    }

    .post-image {
      width: 80px;
      height: 45px;
      aspect-ratio: auto;
      flex-shrink: 0;
      border-radius: 4px;
    }

    .post-image :global(.post-featured-image) {
      aspect-ratio: auto;
      width: 100%;
      height: 100%;
    }

    .post-content {
      flex-grow: 1;
      padding: 0;
      min-width: 0;
      gap: 0.15rem;
    }

    .post-title {
      font-size: 0.85rem;
      -webkit-line-clamp: 3;
      margin: 0;
    }

