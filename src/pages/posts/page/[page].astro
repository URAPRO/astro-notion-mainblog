---
import { NUMBER_OF_POSTS_PER_PAGE } from '../../../server-constants.ts'
import {
  getPostsByPage,
  getNumberOfPages,
  getAllBlogPosts,
} from '../../../lib/notion/client.ts'
import Layout from '../../../layouts/Layout.astro'
import NoContents from '../../../components/NoContents.astro'
import PostFeaturedImage from '../../../components/PostFeaturedImage.astro'
import Pagination from '../../../components/Pagination.astro'
import { getPostLink, getDateStr } from '../../../lib/blog-helpers.ts'

export async function getStaticPaths() {
  const numberOfPages = await getNumberOfPages()

  let params = []
  for (let i = 2; i <= numberOfPages; i++) {
    params.push({ params: { page: i.toString() } })
  }
  return params
}

const { page } = Astro.params

const [posts, numberOfPages, allPosts] = await Promise.all([
  getPostsByPage(parseInt(page, 10)),
  getNumberOfPages(),
  getAllBlogPosts(),
])

// ÂÜÖÈÉ®Ë®ò‰∫ã„ÅÆ„Åø„Ç´„Ç¶„É≥„Éà
const internalAllPosts = allPosts.filter((post) => !post.ExternalLink)

// „Éó„É©„ÉÉ„Éà„Éï„Ç©„Éº„É†„ÇíÂà§ÂÆö„Åô„Çã„Éò„É´„Éë„Éº
const getPlatform = (post: (typeof allPosts)[0]) => {
  if (!post.ExternalLink) return 'blog'
  if (post.ExternalLink.includes('note.com')) return 'note'
  if (post.ExternalLink.includes('zenn.dev')) return 'zenn'
  return 'external'
}

const platformConfig = {
  blog: { icon: 'üè†', label: 'Blog', color: '#E07A3D' },
  note: { icon: '‚úçÔ∏è', label: 'note', color: '#41c9b4' },
  zenn: { icon: 'üíª', label: 'Zenn', color: '#3EA8FF' },
  external: { icon: 'üîó', label: 'External', color: '#888' },
}
---

<Layout
  title={`„Åô„Åπ„Å¶„ÅÆË®ò‰∫ã ${page}/${numberOfPages}`}
  path={`/posts/page/${page}`}
  description="urapro.dev „ÅÆ„Åô„Åπ„Å¶„ÅÆË®ò‰∫ã‰∏ÄË¶ß„ÄÇWebÈñãÁô∫ÊäÄË°ì„ÄÅ„Éó„É≠„Ç∞„É©„Éü„É≥„Ç∞TIPS„ÄÅË™≠Êõ∏Ë®òÈå≤„Å™„Å©„ÇíÁô∫‰ø°„Åó„Å¶„ÅÑ„Åæ„Åô„ÄÇ"
  ogImage=""
>
  <div slot="main" class="posts-page">
    <header class="page-header">
      <h1 class="section-heading">„Åô„Åπ„Å¶„ÅÆË®ò‰∫ã</h1>
      <p class="page-description">
        ÂÖ® {internalAllPosts.length} ‰ª∂„ÅÆË®ò‰∫ã „Éª {page}/{numberOfPages} „Éö„Éº„Ç∏
      </p>
    </header>

    {
      posts.length === 0 ? (
        <NoContents contents={posts} />
      ) : (
        <div class="posts-grid">
          {posts.map((post) => {
            const platform = getPlatform(post)
            const config = platformConfig[platform]
            return (
              <a href={getPostLink(post)} class="post-card">
                <div class="post-image">
                  <PostFeaturedImage post={post} enableLink={false} />
                </div>
                <div class="post-content">
                  <h2 class="post-title">
                    {post.Icon?.Type === 'emoji' && (
                      <span class="post-icon">{post.Icon.Emoji}</span>
                    )}
                    {post.Title}
                  </h2>
                  <div class="post-meta">
                    {post.Tags?.[0] && (
                      <span class="post-tag">{post.Tags[0].name}</span>
                    )}
                    <span class="post-date">{getDateStr(post.Date)}</span>
                  </div>
                </div>
              </a>
            )
          })}
        </div>
      )
    }

    <footer class="page-footer">
      <Pagination
        currentPage={parseInt(page, 10)}
        numberOfPages={numberOfPages}
        tag=""
      />
    </footer>
  </div>
</Layout>

<style>
  .posts-page {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .section-heading {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--fg);
    margin: 0 0 0.5rem;
    padding-left: 1rem;
    position: relative;
  }

  .section-heading::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 1.2em;
    background: linear-gradient(180deg, var(--accents-1) 0%, #d4693a 100%);
    border-radius: 2px;
  }

  .page-description {
    margin: 0;
    padding-left: 1rem;
    font-size: 0.9rem;
    color: var(--accents-2);
  }

  /* „Ç∞„É™„ÉÉ„Éâ„É¨„Ç§„Ç¢„Ç¶„Éà */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* „Ç´„Éº„Éâ„Çπ„Çø„Ç§„É´ */
  .post-card {
    display: flex;
    flex-direction: column;
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid var(--border-color);
  }

  .post-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    border-color: var(--accents-1);
  }

  .post-card:hover .post-image :global(img) {
    transform: scale(1.03);
  }

  .post-image {
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: linear-gradient(135deg, #f5f0e8 0%, #ede5da 100%);
  }

  .post-image :global(.post-featured-image) {
    aspect-ratio: 16 / 10;
    height: 100%;
  }

  .post-image :global(img) {
