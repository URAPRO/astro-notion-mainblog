---
import { getAllBlogPosts } from '../../lib/notion/client.ts'
import Layout from '../../layouts/Layout.astro'
import NoContents from '../../components/NoContents.astro'
import PostFeaturedImage from '../../components/PostFeaturedImage.astro'
import { getPostLink, getDateStr } from '../../lib/blog-helpers.ts'

const allPosts = await getAllBlogPosts()

// „Éó„É©„ÉÉ„Éà„Éï„Ç©„Éº„É†„ÇíÂà§ÂÆö„Åô„Çã„Éò„É´„Éë„Éº
const getPlatform = (post: (typeof allPosts)[0]) => {
  if (!post.ExternalLink) return 'blog'
  if (post.ExternalLink.includes('note.com')) return 'note'
  if (post.ExternalLink.includes('zenn.dev')) return 'zenn'
  return 'external'
}

// „Éó„É©„ÉÉ„Éà„Éï„Ç©„Éº„É†Âà•‰ª∂Êï∞
const blogCount = allPosts.filter((p) => getPlatform(p) === 'blog').length
const noteCount = allPosts.filter((p) => getPlatform(p) === 'note').length
const zennCount = allPosts.filter((p) => getPlatform(p) === 'zenn').length

const platformConfig = {
  blog: { icon: 'üè†', label: 'Blog', color: '#E07A3D' },
  note: { icon: '‚úçÔ∏è', label: 'note', color: '#41c9b4' },
  zenn: { icon: 'üíª', label: 'Zenn', color: '#3EA8FF' },
  external: { icon: 'üîó', label: 'External', color: '#888' },
}

// ÂàùÊúüË°®Á§∫‰ª∂Êï∞
const INITIAL_COUNT = 12
const LOAD_MORE_COUNT = 9
---

<Layout
  title="„Åô„Åπ„Å¶„ÅÆË®ò‰∫ã"
  path="/posts"
  description="urapro.dev „ÅÆ„Åô„Åπ„Å¶„ÅÆË®ò‰∫ã‰∏ÄË¶ß„ÄÇBlog„ÄÅnote„ÄÅZenn„ÅßÁô∫‰ø°„Åó„ÅüWebÈñãÁô∫ÊäÄË°ì„ÄÅ„Éó„É≠„Ç∞„É©„Éü„É≥„Ç∞TIPS„ÄÅË™≠Êõ∏Ë®òÈå≤„Çí„Åæ„Å®„ÇÅ„Å¶„ÅÑ„Åæ„Åô„ÄÇ"
  ogImage=""
>
  <div slot="main" class="posts-page">
    <header class="page-header">
      <h1 class="section-heading">„Åô„Åπ„Å¶„ÅÆË®ò‰∫ã</h1>
      <p class="page-description">ÂÖ® {allPosts.length} ‰ª∂</p>
    </header>

    <!-- „Éï„Ç£„É´„Çø„Éº„ÉÅ„ÉÉ„ÉóÔºà„Çπ„ÉÜ„Ç£„ÉÉ„Ç≠„ÉºÔºâ -->
    <div class="filter-container">
      <div class="filter-chips">
        <button class="filter-chip active" data-filter="all">
          „Åô„Åπ„Å¶ <span class="chip-count">{allPosts.length}</span>
        </button>
        <button class="filter-chip" data-filter="blog">
          <span class="chip-icon">üè†</span> Blog <span class="chip-count"
            >{blogCount}</span
          >
        </button>
        <button class="filter-chip" data-filter="note">
          <span class="chip-icon">‚úçÔ∏è</span> note <span class="chip-count"
            >{noteCount}</span
          >
        </button>
        <button class="filter-chip" data-filter="zenn">
          <span class="chip-icon">üíª</span> Zenn <span class="chip-count"
            >{zennCount}</span
          >
        </button>
      </div>
    </div>

    {
      allPosts.length === 0 ? (
        <NoContents contents={allPosts} />
      ) : (
        <div class="posts-grid" id="posts-grid">
          {allPosts.map((post, index) => {
            const platform = getPlatform(post)
            const config = platformConfig[platform]
            const isHidden = index >= INITIAL_COUNT
            return (
              <a
                href={getPostLink(post)}
                target={post.ExternalLink ? '_blank' : undefined}
                class={`post-card ${isHidden ? 'hidden' : ''}`}
                data-platform={platform}
                data-index={index}
              >
                {platform !== 'blog' && (
                  <div
                    class="platform-badge"
                    style={`--platform-color: ${config.color}`}
                  >
                    <span class="badge-icon">{config.icon}</span>
                    <span class="badge-label">{config.label}</span>
                  </div>
                )}
                <div class="post-image">
                  <PostFeaturedImage post={post} enableLink={false} />
                </div>
                <div class="post-content">
                  <h2 class="post-title">
                    {post.Icon?.Type === 'emoji' && (
                      <span class="post-icon">{post.Icon.Emoji}</span>
                    )}
                    {post.Title}
                  </h2>
                  <div class="post-meta">
                    {post.Tags?.[0] && (
                      <span class="post-tag">{post.Tags[0].name}</span>
                    )}
                    <span class="post-date">{getDateStr(post.Date)}</span>
                  </div>
                </div>
              </a>
            )
          })}
        </div>
      )
    }

    <!-- Ë™≠„ÅøËæº„Åø„Éà„É™„Ç¨„Éº -->
    <div id="load-trigger" class="load-trigger">
      <div class="loading-spinner"></div>
    </div>

    <!-- Ë™≠„ÅøËæº„ÅøÂÆå‰∫Ü„É°„ÉÉ„Çª„Éº„Ç∏ -->
    <div id="end-message" class="end-message hidden">
      „Åô„Åπ„Å¶„ÅÆË®ò‰∫ã„ÇíË°®Á§∫„Åó„Åæ„Åó„Åü
    </div>
  </div>
</Layout>

<script define:vars={{ INITIAL_COUNT, LOAD_MORE_COUNT }}>
  document.addEventListener('DOMContentLoaded', () => {
    const chips = document.querySelectorAll('.filter-chip')
    const cards = document.querySelectorAll('.post-card')
    const loadTrigger = document.getElementById('load-trigger')
    const endMessage = document.getElementById('end-message')

    let currentFilter = 'all'
    let visibleCount = INITIAL_COUNT

    // „Éï„Ç£„É´„Çø„ÉºÊ©üËÉΩ
    chips.forEach((chip) => {
      chip.addEventListener('click', () => {
        // „Ç¢„ÇØ„ÉÜ„Ç£„ÉñÁä∂ÊÖã„ÅÆÂàá„ÇäÊõø„Åà
        chips.forEach((c) => c.classList.remove('active'))
        chip.classList.add('active')

        currentFilter = chip.dataset.filter
        visibleCount = INITIAL_COUNT

        updateVisibility()
      })
    })

    // Ë°®Á§∫Êõ¥Êñ∞
    function updateVisibility() {
      let count = 0
      let totalFiltered = 0

      cards.forEach((card) => {
        const platform = card.dataset.platform
        const matchesFilter =
          currentFilter === 'all' || platform === currentFilter

        if (matchesFilter) {
          totalFiltered++
          if (count < visibleCount) {
            card.classList.remove('hidden')
            card.classList.remove('filtered-out')
            count++
          } else {
            card.classList.add('hidden')
            card.classList.remove('filtered-out')
          }
        } else {
          card.classList.add('filtered-out')
          card.classList.remove('hidden')
        }
      })

      // Ë™≠„ÅøËæº„ÅøÂÆå‰∫ÜÂà§ÂÆö
      if (count >= totalFiltered) {
        loadTrigger.classList.add('hidden')
        endMessage.classList.remove('hidden')
      } else {
        loadTrigger.classList.remove('hidden')
        endMessage.classList.add('hidden')
      }
    }

    // ÁÑ°Èôê„Çπ„ÇØ„É≠„Éº„É´
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            visibleCount += LOAD_MORE_COUNT
            updateVisibility()
          }
        })
      },
      {
        rootMargin: '100px',
      }
    )

    observer.observe(loadTrigger)

    // ÂàùÊúüË°®Á§∫
    updateVisibility()
  })
</script>

<style>
