import { getAllBlogPosts, getAllTags } from '../../lib/notion/client.ts'
import Layout from '../../layouts/Layout.astro'
import NoContents from '../../components/NoContents.astro'
import PostFeaturedImage from '../../components/PostFeaturedImage.astro'
import { getPostLink, getDateStr } from '../../lib/blog-helpers.ts'

const allPosts = await getAllBlogPosts()
const allTags = await getAllTags()

// „Éó„É©„ÉÉ„Éà„Éï„Ç©„Éº„É†„ÇíÂà§ÂÆö„Åô„Çã„Éò„É´„Éë„Éº
const getPlatform = (post: (typeof allPosts)[0]) => {
  if (!post.ExternalLink) return 'blog'
  if (post.ExternalLink.includes('note.com')) return 'note'
  if (post.ExternalLink.includes('zenn.dev')) return 'zenn'
  return 'external'
}

// „Éó„É©„ÉÉ„Éà„Éï„Ç©„Éº„É†Âà•‰ª∂Êï∞
const blogCount = allPosts.filter((p) => getPlatform(p) === 'blog').length
const noteCount = allPosts.filter((p) => getPlatform(p) === 'note').length
const zennCount = allPosts.filter((p) => getPlatform(p) === 'zenn').length

// „Éó„É©„ÉÉ„Éà„Éï„Ç©„Éº„É†Âà•„ÅÆ„Çø„Ç∞‰ª∂Êï∞„ÇíË®àÁÆó
const getTagCountByPlatform = (tagName: string, platform: string) => {
  return allPosts.filter((post) => {
    const postPlatform = getPlatform(post)
    const hasTag = post.Tags?.some((t) => t.name === tagName)
    return postPlatform === platform && hasTag
  }).length
}

// „Çø„Ç∞„Éá„Éº„Çø„ÇíJSON„Å®„Åó„Å¶Ê∏°„ÅôÁî®
const tagsByPlatform = {
  blog: allTags
    .map((tag) => ({
      name: tag.name,
      count: getTagCountByPlatform(tag.name, 'blog'),
    }))
    .filter((t) => t.count > 0),
  note: allTags
    .map((tag) => ({
      name: tag.name,
      count: getTagCountByPlatform(tag.name, 'note'),
    }))
    .filter((t) => t.count > 0),
  zenn: allTags
    .map((tag) => ({
      name: tag.name,
      count: getTagCountByPlatform(tag.name, 'zenn'),
    }))
    .filter((t) => t.count > 0),
}

const platformConfig = {
  blog: { icon: 'üè†', label: 'Blog', color: '#E07A3D' },
  note: { icon: '‚úçÔ∏è', label: 'note', color: '#41c9b4' },
  zenn: { icon: 'üíª', label: 'Zenn', color: '#3EA8FF' },
  external: { icon: 'üîó', label: 'External', color: '#888' },
}

// ÂàùÊúüË°®Á§∫‰ª∂Êï∞
const INITIAL_COUNT = 12
const LOAD_MORE_COUNT = 9

// 7Êó•‰ª•ÂÜÖ„Åã„Å©„ÅÜ„Åã„ÇíÂà§ÂÆö
const isNew = (date: string) => {
  const postDate = new Date(date)
  const now = new Date()
  const diffDays = (now.getTime() - postDate.getTime()) / (1000 * 60 * 60 * 24)
  return diffDays <= 7
}
