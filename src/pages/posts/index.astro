      background: var(--hover-bg);
    }

    .platform-badge {
      position: static;
      order: 3;
      padding: 0.15rem 0.35rem;
      font-size: 0.55rem;
      flex-shrink: 0;
    }

    .badge-icon {
      display: none;
    }

    .post-image {
      width: 80px;
      height: 45px;
      aspect-ratio: auto;
      flex-shrink: 0;
      border-radius: 4px;
    }

    .post-image :global(.post-featured-image) {
      aspect-ratio: auto;
      width: 100%;
      height: 100%;
    }

    .post-content {
      flex-grow: 1;
      padding: 0;
