<script define:vars={{ INITIAL_COUNT, LOAD_MORE_COUNT, tagsByPlatform }}>
  document.addEventListener('DOMContentLoaded', () => {
    const platformChips = document.querySelectorAll(
      '#platform-chips .filter-chip'
    )
    const tagChipsContainer = document.getElementById('tag-chips')
    const tagFilterRow = document.getElementById('tag-filter-row')
    const cards = document.querySelectorAll('.post-card')
    const loadTrigger = document.getElementById('load-trigger')
    const endMessage = document.getElementById('end-message')

    let currentPlatform = 'all'
    let currentTag = 'all'
    let visibleCount = INITIAL_COUNT

    // „Éó„É©„ÉÉ„Éà„Éï„Ç©„Éº„É†„Éï„Ç£„É´„Çø„Éº
    platformChips.forEach((chip) => {
      chip.addEventListener('click', () => {
        platformChips.forEach((c) => c.classList.remove('active'))
        chip.classList.add('active')

        currentPlatform = chip.dataset.filter
        currentTag = 'all'
        visibleCount = INITIAL_COUNT

        updateTagChips()
        updateVisibility()
      })
    })

    // „Çø„Ç∞„ÉÅ„ÉÉ„Éó„ÇíÊõ¥Êñ∞
    function updateTagChips() {
      if (currentPlatform === 'all') {
        tagFilterRow.classList.remove('visible')
        tagChipsContainer.innerHTML = ''
        return
      }

      const tags = tagsByPlatform[currentPlatform] || []

      if (tags.length === 0) {
        tagFilterRow.classList.remove('visible')
        tagChipsContainer.innerHTML = ''
        return
      }

      tagFilterRow.classList.add('visible')

      tagChipsContainer.innerHTML = `
        <button class="tag-chip active" data-tag="all">„Åô„Åπ„Å¶</button>
        ${tags
          .map(
            (tag) => `
          <button class="tag-chip" data-tag="${tag.name}">
            ${tag.name} <span class="tag-count">${tag.count}</span>
          </button>
        `
          )
          .join('')}
      `

      // „Çø„Ç∞„ÉÅ„ÉÉ„Éó„ÅÆ„Ç§„Éô„É≥„Éà
      document.querySelectorAll('.tag-chip').forEach((chip) => {
        chip.addEventListener('click', () => {
          document
            .querySelectorAll('.tag-chip')
            .forEach((c) => c.classList.remove('active'))
          chip.classList.add('active')
          currentTag = chip.dataset.tag
          visibleCount = INITIAL_COUNT
          updateVisibility()
        })
      })
    }

    // Ë°®Á§∫Êõ¥Êñ∞
    function updateVisibility() {
      let count = 0
      let totalFiltered = 0

      cards.forEach((card) => {
        const platform = card.dataset.platform
        const tags = card.dataset.tags ? card.dataset.tags.split(',') : []

        const matchesPlatform =
          currentPlatform === 'all' || platform === currentPlatform
        const matchesTag = currentTag === 'all' || tags.includes(currentTag)
        const matchesFilter = matchesPlatform && matchesTag

        if (matchesFilter) {
          totalFiltered++
          if (count < visibleCount) {
            card.classList.remove('hidden')
            card.classList.remove('filtered-out')
            count++
          } else {
            card.classList.add('hidden')
            card.classList.remove('filtered-out')
          }
        } else {
          card.classList.add('filtered-out')
          card.classList.remove('hidden')
        }
      })

      // Ë™≠„ÅøËæº„ÅøÂÆå‰∫ÜÂà§ÂÆö
      if (count >= totalFiltered) {
        loadTrigger.classList.add('hidden')
        endMessage.classList.remove('hidden')
      } else {
        loadTrigger.classList.remove('hidden')
        endMessage.classList.add('hidden')
      }
    }

    // ÁÑ°Èôê„Çπ„ÇØ„É≠„Éº„É´
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            visibleCount += LOAD_MORE_COUNT
            updateVisibility()
          }
        })
      },
      {
        rootMargin: '100px',
      }
    )

    observer.observe(loadTrigger)

    // ÂàùÊúüË°®Á§∫
    updateVisibility()
  })
</script>

