import Layout from '../layouts/Layout.astro'
import { getAllBlogPosts } from '../lib/notion/client.ts'
import { getPostLink, filePath } from '../lib/blog-helpers.ts'
import type { Post } from '../lib/interfaces.ts'

const allPosts = await getAllBlogPosts()

const hasGalleryTag = (post: Post) => {
  const normalize = (value?: string) => value?.toLowerCase().trim()
  const tags = post.Tags || []
  const internalTags = post.InternalTags || []
  return (
    tags.some((tag) => normalize(tag.name) === 'gallery') ||
    internalTags.some((tag) => normalize(tag.name) === 'gallery')
  )
}

const toImageUrl = (post: Post) => {
  if (!post.FeaturedImage?.Url) return ''

  if (import.meta.env.DEV) {
    return post.FeaturedImage.Url
  }

  try {
    return filePath(new URL(post.FeaturedImage.Url))
  } catch {
    return post.FeaturedImage.Url
  }
}

const formatDate = (value: string) => {
  if (!value) return ''
  try {
    return new Date(value).toLocaleDateString('ja-JP', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  } catch {
    return value
  }
}

const galleryCards = allPosts
  .filter((post) => post.Published && hasGalleryTag(post) && !post.ExternalLink)
  .map((post) => ({
    post,
    imageUrl: toImageUrl(post),
    link: getPostLink(post),
    dateLabel: formatDate(post.Date),
  }))
  .sort((a, b) => (a.post.Date < b.post.Date ? 1 : -1))
